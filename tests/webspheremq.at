AT_BANNER([WebSphere MQ])

# check the database "testdb" is available and the user can connect to it
AT_SETUP([MQ/0.0/0.0 WebSphere MQ availability])
AT_CHECK([if test "$HAVE_WEBSPHEREMQ" = "no"; then exit 77; fi])
AT_CHECK([$WEBSPHEREMQ_PATH/samp/bin/$AMQSGET LIXA.QLOCAL LIXA], [0], [ignore], [ignore])
AT_CLEANUP

# check the current user has PUT & GET privilege on table authors
AT_SETUP([PQ/0.0/0.1 PUT & GET on LIXA.QLOCAL])
AT_CHECK([if test "$HAVE_WEBSPHEREMQ" = "no"; then exit 77; fi])
AT_CHECK([echo "Case test message" | $WEBSPHEREMQ_PATH/samp/bin/$AMQSPUT LIXA.QLOCAL LIXA], [0], [ignore], [ignore])
AT_CHECK([$WEBSPHEREMQ_PATH/samp/bin/$AMQSGET LIXA.QLOCAL LIXA >$TESTS_TMP_FILE1 && grep "Case test message" $TESTS_TMP_FILE1], [0], [ignore], [ignore])
AT_CLEANUP

# try one phase commit (dynamic registration)
AT_SETUP([PQ/0.1/0.0 One phase commit (dynamic registration)])
AT_CHECK([if test "$HAVE_WEBSPHEREMQ" = "no"; then exit 77; fi])
AT_CHECK([export LIXA_PROFILE=$LIXA_PROF_DYN ; lixa_test_exec.sh reset start case0044 1 1 0], [0], [ignore], [ignore])
AT_CHECK([export LIXA_PROFILE=$LIXA_PROF_DYN ; lixa_test_exec.sh noreset none case0044 1 0 0], [0], [ignore], [ignore])
AT_CLEANUP
# try one phase commit (static registration)
AT_SETUP([PQ/0.1/0.1 One phase commit (dynamic registration)])
AT_CHECK([if test "$HAVE_WEBSPHEREMQ" = "no"; then exit 77; fi])
AT_CHECK([export LIXA_PROFILE=$LIXA_PROF_STA ; lixa_test_exec.sh reset start case0044 1 1 0], [0], [ignore], [ignore])
AT_CHECK([export LIXA_PROFILE=$LIXA_PROF_STA ; lixa_test_exec.sh noreset none case0044 1 0 0], [0], [ignore], [ignore])
AT_CLEANUP

