xa_end/0
xa_rollback/0
xa_close/0
]])
AT_DATA([monkey2d.conf],
[[# monkey R.M. config
xa_open/0
xa_end/0
xa_rollback/0
xa_close/0
]])
else
AT_DATA([monkey1s.conf],
[[# monkey R.M. config
xa_open/0
# this is a recovery pending commit; the resource manager already rolled back
xa_rollback/-4
xa_start/0
xa_end/0
xa_rollback/0
xa_close/0
]])
AT_DATA([monkey2s.conf],
